{% extends 'GremioAbmBundle::layout.html.twig' %}
{% block body %}
<div class="mws-panel grid_6">
    <div class="mws-panel-header">
       <span class="mws-i-24 i-sign-post">Alta de Seccion</span>
     </div>
<div class="mws-panel-body">
<form id="mws-wizard-form" class="mws-form" action="{{ path('administracion_entidades_seccion_create') }}" method="post" {{ form_enctype(form) }}>
    <div class="mws-wizard-nav clearfix">
            <ul>
                <li><a class="mws-ic-16 ic-database" href="#step-1">Datos</a></li>
            </ul>
        </div>    
{#
 <div id class="mws-form-row">
            {{ form_label(form.Num_Documento) }}
            {{ form_errors(form.Num_Documento) }}
                <div class="mws-form-item large">     
                    {{ form_widget(form.Num_Documento,{ 'attr' : { 'class' : 'mws-textinput' }}) }}
                </div>   
            </div>
#}

        
        <fieldset id="step-1" class="mws-form-inline">
    {{ form_errors(form) }}
                
                <div id class="mws-form-row">
                {{ form_label(form.Descripcion) }}
                {{ form_errors(form.Descripcion) }}
                <div class="mws-form-item large">  
                {{ form_widget(form.Descripcion,{ 'attr' : { 'class' : 'mws-textinput' }}) }}
                </div>   
                </div>
                
                <div id class="mws-form-row">
                {{ form_label(form.Domicilio) }}
                {{ form_errors(form.Domicilio) }}
                <div class="mws-form-item large">  
                {{ form_widget(form.Domicilio,{ 'attr' : { 'class' : 'mws-textinput' }}) }}
                </div>   
                </div>
                
                <div id class="mws-form-row">
                {{ form_label(form.Telefono) }}
                {{ form_errors(form.Telefono) }}
                <div class="mws-form-item large">  
                {{ form_widget(form.Telefono,{ 'attr' : { 'class' : 'mws-textinput' }}) }}
                </div>   
                </div>
                
                <div id class="mws-form-row">
	{{ form_label(form.localidad) }}
	{{ form_errors(form.localidad) }}
        {# Se a√±ade la busqueda por localidad #}
                <div class="mws-form-item large"> 
	{{ form_widget(form.localidad,{ 'attr' : { 'class' : 'chzn-select', 'style' : 'width:350px;' }}) }}
        </div>
                 </div>
                
                
                
                {{ form_rest(form) }}
            </fieldset> 
                
    
</form>
        </div>
                </div>



    
{% endblock %}
{% block javascripts %}
{{ parent() }}

<script>
        $("#mws-wizard-form").mwsWizard({
        'submitButtonLabel' : 'Dar de Alta',
        'forwardOnly' : false,
        'nextButtonLabel' : 'Siguiente',
        'prevButtonLabel' : 'Atras',
        'nextButtonClass' : 'mws-button blue',
        onLeaveStep: function(index, elem) {
				return v.form();
			}, 
			onBeforeSubmit: function() {
				return v.form();
			}
    });
    var v = $("#mws-wizard-form").validate({ onsubmit: false });
    
    
</script>
{% endblock %}

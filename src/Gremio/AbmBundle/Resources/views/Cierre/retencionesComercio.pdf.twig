<pdf>
    <dynamic-page encoding="UTF-8" font-type="DejaVuSans">
    
        <p text-align="right">Salta, {{ "now" | date('d/m/Y') }}</p>
        <p font-style="bold" padding="0px 0px 0px 0px" text-align="justify" width="250px">Agremiación de Empleados del Poder Judicial y Ministerio Público de la Provincia de Salta</p>
        <p font-size="10px" padding="0px 0px 0px 0px" text-align="justify" width="250px">25 de Mayo 573 - Tel 4215769-4224607</p>
        <p font-size="9px" padding="0px 0px 0px 0px" text-align="justify" width="250px">e-mail ajuprosal@hotmail.com</p>


        
        <h1 text-align="center">Planilla de comisiones por Proveedores correspondiente al: {{ cierre.descripcion }}</h1>
        
        <placeholders>
            <header>
                <div text-align="right" height="25px" padding-right="50px" padding-top="150px">
                    <page-info offset="0" format="Pagina N %s" />
                </div>
            </header>
        </placeholders>
        
        <table padding-top="60px">
        	
	        <tr>
		        <td font-style="bold" border.type="none">
		        	Proveedor
		        </td>
		        <td font-style="bold" border.type="none">
		        	% Comision
		        </td>
		        <td font-style="bold" border.type="none">
		        	Compras
		        </td>
		        <td font-style="bold" border.type="none">
		        	Comision
		        </td>
		        <td font-style="bold" border.type="none">
		        	Neto
		        </td>
		       
        	</tr>
			
        	{% for linea in detalles %}
	        	
	        	
	        	<tr border.type="none">
	        		<td border.type="none">{{ linea.comercio }}</td>
	        		<td border.type="none" width="230px">{{ linea.porcentaje_comision }}</td>
	        		<td border.type="none" width="150px">{{ completar_decimales(linea.compras) }}</td>
	        		
	        		<td border.type="none">{{ completar_decimales(linea.importe_comision) }}</td>
	        		<td border.type="none">{{ completar_decimales(linea.importe_neto) }}</td>
	        		
	        		
	        	</tr>
        	{% endfor %}
        </table>

        

            </dynamic-page>
        </pdf>
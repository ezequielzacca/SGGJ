<pdf>
    <dynamic-page encoding="UTF-8" font-type="DejaVuSans">
    
        <p text-align="right">Salta, {{ "now" | date('d/m/Y') }}</p>
        <p font-style="bold" padding="0px 0px 0px 0px" text-align="justify" width="250px">Agremiación de Empleados del Poder Judicial y Ministerio Público de la Provincia de Salta</p>
        <p font-size="10px" padding="0px 0px 0px 0px" text-align="justify" width="250px">25 de Mayo 573 - Tel 4215769-4224607</p>
        <p font-size="9px" padding="0px 0px 0px 0px" text-align="justify" width="250px">e-mail ajuprosal@hotmail.com</p>


        
        <h1 text-align="center">Consulta Pago a Proveedores Pendientes</h1>
       
        
        <placeholders>
            <header>
                <div text-align="right" height="25px">
                    <page-info offset="0" format="Pagina %s de %s" />
                </div>
            </header>
        </placeholders>
        
        <table padding-top="60px">
        	
	        <tr>
		        <td font-style="bold" border.type="none">
		        	Cierre
		        </td>
		        <td font-style="bold" border.type="none">
		        	Proveedor
		        </td>
		        <td font-style="bold" border.type="none">
		        	Importe
		        </td>
		        
        	</tr>
			
        	{% for pago in pagos %}
	        	

	        	<tr border.type="none">
	        		<td border.type="none">{{ pago.cierre.descripcion }}</td>
	        		<td border.type="none">{{ pago.proveedor }}</td>
	        		<td border.type="none">{{ completar_decimales(pago.importe) }}</td>
	        		
	        		
	        		
	        	</tr>
        	{% endfor %}
        </table>

        

            </dynamic-page>
        </pdf>